<a class="btn btn-secondary" onclick="location.href='@Url.Action("Login", "Security")'">Back to Login</a>
<div class="row mb-2 mt-5">
    <div class="col-md-6">
        <form asp-controller="Security" asp-action="Register" method="post">
            <input type="hidden" name="requestpath" id="requestpath" value="@ViewBag.RequestPath" />
            <div class="form-row mb-3">
                <div class="col">
                    <label for="firstname">First Name</label>
                    <input type="text" name="firstname" id="firstname" class="form-control" placeholder="First Name">
                </div>
                <div class="col">
                    <label for="lastname">Last Name</label>
                    <input type="text" name="lastname" id="lastname" class="form-control" placeholder="Last Name">
                </div>
            </div> 
            <div class="form-group">
                <label for="exampleFormControlInput1">Email address</label>
                <input type="email" name="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control" placeholder="Password">
            </div>
            <button type="submit" name="submit" value="Login" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>